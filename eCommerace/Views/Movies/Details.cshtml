@model Movie
@{
    ViewData["Title"] = "Details for a Cinema";
}
<div class="row text-black">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                    <img id="ImagePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group mb-3">
                    <label asp-for="ImageURL" class="control-label"></label>
                    <input asp-for="ImageURL" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="MovieCategory" class="control-label"></label>
                        <input asp-for="MovieCategory" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3 d-flex justify-content-evenly">
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    </div>
            </div>
                
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function(){
            $("#ImageURL").on("change", function () {
                var output = document.getElementById("ImagePreview");
                output.src = $("#ImageURL").val();
            })
        })
    </script>
}