@model Movie
@{
    ViewData["Title"] = "Edit a new Movie";
}
<div class="row text-black">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit a new Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="MoviePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ImageURL" class="control-label"></label>
                        <input asp-for="ImageURL" class="form-control" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="MovieCategory" class="control-label"></label>
                        <input asp-for="MovieCategory" class="form-control" />
                        <span asp-validation-for="MovieCategory" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3 d-flex justify-content-evenly">
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        <input type="submit" value="Update" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@section Scripts{
        <script>
            $(document).ready(function(){
                    $("#ImageURL").on("change", function () {
                    var output = document.getElementById("MoviePreview");
                    output.src = $("#ImageURL").val();
                })
            })
                $("#ImageURL").on("change", function(){
                var output = document.getElementById("MoviePreview");
                output.src = $(this).val();
            })
        </script>
}