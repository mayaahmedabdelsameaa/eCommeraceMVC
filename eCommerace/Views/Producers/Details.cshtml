@model Producer
@{
    ViewData["Title"] = "Details for an Producer";
}
<div class="row text-black">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProfilePicture" class="control-label"></label>
                    <input asp-for="ProfilePicture" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                </div>
                <div class="form-group mb-3 d-flex justify-content-evenly">
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#ProfilePicture").on("change", function () {
                var output = document.getElementById("ProfilePicturePreview");
                output.src = $("#ProfilePicture").val();
            })
        })
    </script>
}