@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.Logo)</th>
                    <th>@Html.DisplayNameFor(model=>model.Name)</th>
                    <th>@Html.DisplayNameFor(model=>model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.Logo" class="rounded-circle" alt="@item.Name" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @item.Name
                        </td>
                        <td class="align-middle">
                            @item.Description
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi-pencil-square me-1"></i>Edit</a> |
                            <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id"><i class="bi-eye me-1"></i>Details</a> |
                            <a class="btn btn-outline-danger" asp-action="Edit" asp-route-id="@item.Id"><i class="bi-trash me-1"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="text-white" style="position:fixed; right:25px; bottom:70px">
    <a asp-asp-controller="Cinemas" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>