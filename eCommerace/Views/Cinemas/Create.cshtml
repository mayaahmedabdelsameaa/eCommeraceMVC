@model Cinema
@{
    ViewData["Title"] = "Add a new Cinema";
}
<div class="row text-black">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a new Cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="LogoPreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3 d-flex justify-content-evenly">
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
                
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function(){
            $("#Logo").on("change", function () {
                var output = document.getElementById("LogoPreview");
                output.src = $("#Logo").val();
            })
        })
        $("#Logo").on("change", function(){
            var output = document.getElementById("LogoPreview");
            output.src = $(this).val();
        })
    </script>
}